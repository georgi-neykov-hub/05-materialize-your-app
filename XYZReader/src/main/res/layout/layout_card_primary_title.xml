<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/rhythm_space_double"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        style="@style/CardView.Text.Title.Primary"
        android:id="@+id/primaryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/rhythm_space_single"
        tools:text="Title goes here" />

    <TextView
        style="@style/CardView.Text.Title.Secondary"
        android:id="@+id/subTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/primaryTitle"
        tools:text="Subtitle here"
        />

</RelativeLayout>